FROM debian:12

RUN apt-get update && apt-get install -y \
    debootstrap \
    squashfs-tools \
    xorriso \
    isolinux \
    syslinux-common \
    genisoimage \
    rsync \
    wget \
    git \
    curl \
    mtools \
    dosfstools \
    jq \
    shellcheck \
    dpkg-dev \
    apt-utils \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build
