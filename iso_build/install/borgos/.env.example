# BorgOS Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# API Keys (Required for AI features)
# =============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude models)  
ANTHROPIC_API_KEY=sk-ant-...

# Local Ollama API (for offline models)
OLLAMA_API_BASE_URL=http://localhost:11434

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=borgos
DB_USER=borgos
DB_PASSWORD=changeme-secure-password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# ChromaDB
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_AUTH_TOKEN=borgos-token-changeme

# =============================================================================
# Agent Configuration
# =============================================================================

# Agent Zero
AGENT_ZERO_ENABLED=true
AGENT_ZERO_AUTOSTART=false
AGENT_ZERO_PORT=8085

# Zenith Coder
ZENITH_ENABLED=true
ZENITH_PATH=/path/to/zenith-coder

# MCP Server
MCP_ENABLED=true
MCP_PORT=7300

# Model Selection
CHAT_MODEL=gpt-4o-mini
UTILITY_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Application Settings
# =============================================================================

# Ports
API_PORT=8081
DASHBOARD_PORT=8080

# Security
SECRET_KEY=change-this-to-a-random-secret-key
JWT_SECRET_KEY=change-this-jwt-secret

# Resource Limits
API_WORKERS=4
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=512mb

# Development
DEBUG=false
LOG_LEVEL=INFO