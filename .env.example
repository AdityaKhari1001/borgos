# ============================================
# BorgOS v2.0 Complete Configuration
# Copy this file to .env and update with your values
# ============================================

# Domain Configuration
DOMAIN=borg.tools.ddns.net
EMAIL=admin@borg.tools

# Version
BORGOS_VERSION=2.0

# ============================================
# Ports Configuration
# ============================================
BORGOS_PORT=6969
API_PORT=8081
AGENT_ZERO_PORT=8085
ZENITH_BACKEND_PORT=8101
ZENITH_FRONTEND_PORT=3101
N8N_PORT=5678
PORTAINER_PORT=9000
OLLAMA_PORT=11434
POSTGRES_PORT=5432
REDIS_PORT=6379
CHROMADB_PORT=8010
MCP_PORT=3000

# ============================================
# AI Configuration
# ============================================
# OpenAI (optional - for GPT models)
OPENAI_API_KEY=sk-...

# Anthropic (optional - for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Ollama (local models)
OLLAMA_HOST=http://ollama:11434
OLLAMA_API_BASE_URL=http://ollama:11434
OLLAMA_MODELS=gemma:2b,llama2:7b,codellama:7b

# Default AI model
DEFAULT_AI_MODEL=gemma:2b
CHAT_MODEL=gemma:2b
UTILITY_MODEL=gemma:2b
EMBEDDING_MODEL=all-minilm

# ============================================
# Database Configuration
# ============================================
# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=borgos
DB_USER=borgos
DB_PASSWORD=changeme-secure-password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme-redis-password

# ChromaDB
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_AUTH_TOKEN=borgos-token-changeme
CHROMA_TOKEN=borgos-token-changeme

# ============================================
# Security Configuration
# ============================================
# JWT Secret (minimum 32 characters)
JWT_SECRET=change-this-to-a-random-secret-key-min-32-chars
JWT_SECRET_KEY=change-this-jwt-secret
SECRET_KEY=change-this-to-a-random-secret-key

# Session Secret
SESSION_SECRET=your_session_secret_here

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_on_first_login

# SSH Credentials
SSH_USERNAME=borgos
SSH_PASSWORD=borgos

# ============================================
# Agent Configuration
# ============================================
# Agent Zero
AGENT_ZERO_ENABLED=true
AGENT_ZERO_AUTOSTART=true
AGENT_ZERO_MEMORY_PATH=/app/memory
AGENT_ZERO_MAX_ITERATIONS=10
AGENT_ZERO_REPO=https://github.com/vizi2000/agent-zero

# Zenith Coder
ZENITH_ENABLED=true
ZENITH_PATH=/opt/borgos/zenith-coder
ZENITH_PROJECT_PATH=/projects
ZENITH_AUTO_SCAN=true

# MCP Server
MCP_ENABLED=true
MCP_SERVER_PORT=3000
MCP_PORT=3000

# ============================================
# DevOps Tools Configuration
# ============================================
# n8n
N8N_ENCRYPTION_KEY=your_n8n_encryption_key
N8N_WEBHOOK_URL=https://n8n.borg.tools.ddns.net
N8N_HOST=borg.tools.ddns.net
N8N_PROTOCOL=https

# Portainer
PORTAINER_ADMIN_PASSWORD=change_me_on_first_login

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
TELEMETRY_ENABLED=false
DEBUG=false

# ============================================
# Resource Limits
# ============================================
# Docker resource limits
DOCKER_MEMORY_LIMIT=8G
DOCKER_CPU_LIMIT=4
API_WORKERS=4
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=512mb

# Service-specific limits
OLLAMA_MEMORY_LIMIT=8G
AGENT_ZERO_MEMORY_LIMIT=2G
ZENITH_MEMORY_LIMIT=2G

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# ============================================
# SSL Configuration
# ============================================
SSL_ENABLED=true
SSL_CERT_EMAIL=admin@borg.tools
SSL_STAGING=false

# ============================================
# Development Mode
# ============================================
DEV_MODE=false
HOT_RELOAD=false